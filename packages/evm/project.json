{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/evm/src",
  "projectType": "application",
  "targets": {
    "node": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd packages/evm && npx hardhat node"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd packages/evm && npx hardhat run scripts/1_deploy.ts --network localhost"
      }
    },
    "deploy-goerli": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd packages/evm && npx hardhat run scripts/1_deploy.ts --network goerli"
      }
    },
    "mock": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd packages/evm && npx hardhat run scripts/2_populateData.ts --network localhost"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd packages/evm && npx hardhat test"
      }
    },
    "compile": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd packages/evm && npx hardhat compile"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd packages/evm && npx hardhat clean"
      }
    }
  },
  "tags": []
}
